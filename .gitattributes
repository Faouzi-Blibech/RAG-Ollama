# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF line endings
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
*.pxi text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Configuration files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
LICENSE text eol=lf
README* text eol=lf

# Shell scripts (Unix line endings)
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files (Windows line endings)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files (should not be processed by Git)
*.db binary
*.sqlite binary
*.sqlite3 binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Document files
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Model files (common in ML projects)
*.pkl binary
*.joblib binary
*.model binary
*.bin binary
*.pt binary
*.pth binary
*.onnx binary
*.h5 binary
*.hdf5 binary

# Data files
*.csv text eol=lf
*.tsv text eol=lf
*.jsonl text eol=lf

# Python specific
*.pyc binary
*.pyo binary
*.whl binary
*.egg binary

# Log files
*.log text eol=lf

# Export merge and diff attributes for generated files
*.sql linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true

# Language detection overrides
*.html linguist-detectable=true
*.js linguist-detectable=true
*.css linguist-detectable=true
*.py linguist-detectable=true

# Mark certain directories as not language-detectable
data/* linguist-vendored
__pycache__/* linguist-generated
*.egg-info/* linguist-generated

# Large File Storage (if you plan to use Git LFS later)
# *.db filter=lfs diff=lfs merge=lfs -text
# *.model filter=lfs diff=lfs merge=lfs -text
# *.bin filter=lfs diff=lfs merge=lfs -text